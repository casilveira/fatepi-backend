<?php
class Funcionario {
    protected $salarioBase = 2000;

    public function salario() {
        return $this->salarioBase;
    }
}

class Gerente extends Funcionario {
    public function salario() {
        // Sobrescreve, mas aproveita o c치lculo do pai
        return parent::salario() + 1500;
    }
}

$f1 = new Funcionario();
$g1 = new Gerente();

echo "Sal치rio Funcion치rio: R$ " . $f1->salario() . "\n"; // 2000
echo "Sal치rio Gerente: R$ " . $g1->salario() . "\n";     // 3500
?>
